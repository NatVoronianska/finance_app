<div id="<%= dom_id operation %>">
  <h3>Transaction id: <%= (params[:id]) %></h3>
  <hr>
  <table class="table table-bordered table-striped">
  <tbody>
    <tr>
      <td><strong>Amount:</strong></td>
      <td><%= operation.amount %></td>
    </tr>
    <tr>
      <td><strong>Date:</strong></td>
      <td><%= operation.date %></td>
    </tr>
    <tr>
      <td><strong>Description:</strong></td>
      <td><%= operation.description %></td>
    </tr>
    <tr>
      <td><strong>Category id:</strong></td>
      <td><%= operation.category.id %></td>
    </tr>
    <tr>
      <td><strong>Category name:</strong></td>
      <td><%= operation.category.name%></td>
    </tr>
    
  </tbody>
</table>
            <%= link_to "Show", category_operation_path(@category, operation), class: "btn btn-sm btn-info mr-2" %>
            <%= link_to "Edit", edit_category_operation_path(@category, operation), class: "btn btn-sm btn-primary mr-2" %>
            <%= link_to "Destroy", category_operation_path(@category, operation), method: :delete, data: { confirm: "Are you sure you want to delete this operation?" }, class: "btn btn-sm btn-warning" %>
          
</div>
