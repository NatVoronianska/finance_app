<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td class="d-flex flex-row justify-content-sm-around ">
          <%= link_to "Show", category, class: "btn btn-info px-5" %>
          <%= link_to "Edit", edit_category_path(category), class: "btn btn-primary px-5" %>
          <%= link_to "Destroy", category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "btn btn-warning px-5" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create new category", new_category_path, class: "btn btn-outline-secondary" %>
