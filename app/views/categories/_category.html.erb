<div id="<%= dom_id category %>">
  <div class="row border align-items-center text-center border-secondary rounded">
      <div class="col-md-2 border-end"><%= category[:id] %></div>
      <div class="col-md-3"><%= category.name %></div>
      <div class="col-md-3 border-start border-end"><%= category.description %></div>
      <div class="col-md-4 d-flex">
        <div><%= link_to "Edit", edit_category_path(category), class: "btn btn-primary border border-secondary ms-5 px-5" %></div>
        <div><%= button_to "Delete", category, method: :delete,data: { confirm: "Are you sure you want to delete this operation?" }, class: "btn btn-warning mx-5 px-4 border border-secondary" %></div>
      </div>
  </div>
</div>
  
          
          
